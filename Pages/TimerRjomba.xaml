<Page x:Class="TimeLord_Кылосов.Pages.TimerRjomba"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeLord_Кылосов.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimerRjomba">

    <Grid  Background="#FFE8E100">
        <Label x:Name="time" Content="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Center" 
               Margin="299, 95, 299, 242.6" Foreground="White" FontSize="48"/>
        <Button x:Name="BTT" Content="Старт" HorizontalAlignment="Left" 
                VerticalAlignment="Top" Margin="280,372,0,0" Width="111" Height="25" Background="White" 
                Foreground="#ffe8e100" Click="StartStopTimer"/>
        <TextBox x:Name="TimerTime" Margin="410,372,0,0" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" />
    </Grid>
</Page>
